#include <iostream>	
using namespace std; int main() {
int ch; float a, b;
cout << "1. Addition"<<endl; cout << "2. Subtraction"<<endl;
cout << "3. Multiplication"<<endl; cout << "4. Division"<<endl;
cout << "Enter choice: "<<endl; cin >> ch;
cout << "Enter two numbers: "; cin >> a >> b;
switch(ch) {
case 1: cout<<"Result = "<<a + b; break;
case 2: cout <<"Result = "<< a - b; break;
case 3: cout<<"Result = "<< a * b; break;
case 4:
if(b!= 0)
cout <<"Result ="<< a / b; else
cout<<"Division not possible"; break;
default: cout<<"Invalid choice";
}
return 0;
}
